<div class="modal" id="add_task_modal">

  <%= form_for @task, html: { class: "modal_form" } do |f| %>

    <div>新規タスク追加</div>
    
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title %>

    <%= f.label :info, '説明文' %>
    <%= f.text_area :info %>

    <%= f.label :start_time, '日' %>
    <%= f.date_field :start_time %>

    <%= f.label :notification, '通知' %>
    <%= f.check_box :notification %>

    <button type="button" id="cancel_btn">キャンセル</button>
    <%= f.submit id: "add_task_modal_submit_btn" %>
  <% end %>
</div>