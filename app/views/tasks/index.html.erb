<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<div id="add_task_modal_btn">
  タスクを追加
</div>

<%= month_calendar events: @tasks do |date, tasks| %>
  <%= date %>

  <div id="task_index">
    <%= render partial: "task", collection: tasks %>
  </div>

<% end %>

<br><br><br>

<%= render 'tasks/modal/add_task_modal' %>
<%= render 'tasks/modal/edit_task_modal' %>
<%= render 'tasks/modal/delete_task_modal' %>
<%= render 'tasks/add_task_modal_submit_btn' %>
<%= render 'tasks/edit_task_modal_submit_btn' %>
<%= render 'tasks/delete_task_modal_submit_btn' %>

<%= javascript_pack_tag 'tasks/add_task_modal_btn' %>
<%= javascript_pack_tag 'tasks/delete_task_modal_btn' %>
<%= javascript_pack_tag 'tasks/edit_task_modal_btn' %>
